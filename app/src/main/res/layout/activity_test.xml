<?xml version="1.0" encoding="UTF-8"?>
<androidx.appcompat.widget.LinearLayoutCompat tools:context="uz.boxodir.testapp.testmvp.mvp.test.mvp.TestActivity"
    android:orientation="vertical"
    android:background="#FAF6F6"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/white"
        android:layout_height="?android:actionBarSize"
        android:layout_width="match_parent"
        tools:ignore="ExtraText">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:background="?android:selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/baseline_arrow_back_24"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:id="@+id/buttonBack"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:id="@+id/textAction"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Geografiya"
        android:fontFamily="@font/asf"
        android:gravity="center"
        android:layout_weight="1"/>

    <Space
        android:layout_height="match_parent"
        android:layout_width="56dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="16dp" app:cardCornerRadius="8dp" app:cardBackgroundColor="@color/white">


    <androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="16dp">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/textQuestion"
        android:textSize="18sp"
        android:textColor="@color/black" tools:text="Qaysi so'z tarkibida ikki jarangli undosh orasida yuqori tor unli kelgan yopiq bo'g'in bor?"
        android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/allAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="10/6" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/variant_1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        android:paddingHorizontal="8dp">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/radio1"
            app:layout_constraintEnd_toEndOf="@+id/radio1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.448"
            tools:ignore="MissingConstraints"
            tools:text="suyuqlik" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
        android:id="@+id/variant_2"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingHorizontal="8dp">

    <RadioButton
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/radio2"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/radio2"
            app:layout_constraintEnd_toEndOf="@+id/radio2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.448"
            tools:text="suyuqlik" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
    android:layout_marginTop="12dp"
        android:id="@+id/variant_3"
        android:layout_marginHorizontal="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingHorizontal="8dp">

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/radio3"
            app:layout_constraintEnd_toEndOf="@+id/radio3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.448"
            tools:text="suyuqlik" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/variant_4"
        android:layout_height="wrap_content"
    android:layout_width="match_parent" app:cardCornerRadius="8dp" app:cardBackgroundColor="@color/white"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingHorizontal="8dp">

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/radio4"
            app:layout_constraintEnd_toEndOf="@+id/radio4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.517"
            tools:text="suyuqlik" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

    <Space
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"/>


    <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_height="56dp"
        android:layout_width="0dp"
        android:id="@+id/buttonSkip"
        android:text="Tashlab ketish"
        android:textSize="20sp"
        android:fontFamily="@font/asf"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:background="@drawable/item_background"
        android:textAllCaps="false"/>

    <Space
        android:layout_height="match_parent"
        android:layout_width="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/ic_action"
            android:layout_height="56dp"
            android:layout_width="0dp"
            android:id="@+id/buttonNext"
            android:textColor="@color/white"
            android:text="Keyingisi"
            android:textSize="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/asf"
            android:textAllCaps="false"
            android:enabled="false"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
