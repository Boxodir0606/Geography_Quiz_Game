<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <gradient android:startColor="#E18630"
                android:centerColor="#1AE18630"
                android:endColor="#E18630"
                android:angle="90"/>
            <corners android:radius="18sp"/>
            <padding android:top="6dp"
                android:bottom="6dp"
                android:right="12dp"
                android:left="12dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#80757575"/>
            <corners android:radius="18sp"/>
            <padding android:top="6dp"
                android:bottom="6dp"
                android:right="12dp"
                android:left="12dp"/>
        </shape>
    </item>

</selector>